// Prisma schema for water intake tracker
// Save as prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model WaterLog {
  id        Int      @id @default(autoincrement())
  userId    String
  date      String
  intakeMl  Int

  @@unique([userId, date])
}
